@model IEnumerable<Ornek2.Models.Product>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProducView</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <div> 
        <table>
            <tr>
                <th>@Html.LabelFor(m => Model.FirstOrDefault().ProductName)</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
     
                    <td>@Html.DisplayFor(m=>item.ProductName)</td>
                    
                </tr>
            }
           
        </table>

    </div>
</body>
</html>
